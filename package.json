{
  "name": "node-scientist",
  "version": "1.0.1",
  "description": "Helper to do Science!",
  "main": "dist/scientist.js",
  "scripts": {
    "build": "babel --out-dir dist src",
    "format": "standard --format",
    "integration": "NODE_ENV=test NODE_PATH=./src mocha $npm_package_options_mocha test/integration",
    "lint": "standard",
    "prepublish": "npm run build",
    "test": "npm run lint && npm run unit && npm run functional",
    "unit": "NODE_ENV=test NODE_PATH=./src mocha $npm_package_options_mocha test/unit"
  },
  "options": {
    "mocha": "--recursive --reporter spec --bail --compilers js:babel-register"
  },
  "author": "Bryan Kendall <bryan@runnable.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/Runnable/scientist"
  },
  "license": "MIT",
  "standard": {
    "parser": "babel-eslint",
    "globals": [
      "describe",
      "before",
      "beforeEach",
      "after",
      "afterEach",
      "it"
    ]
  },
  "devDependencies": {
    "babel-cli": "^6.5.1",
    "babel-eslint": "^5.0.0",
    "babel-plugin-add-module-exports": "^0.1.2",
    "babel-preset-es2015": "^6.5.0",
    "babel-register": "^6.5.2",
    "chai": "^3.4.1",
    "chai-as-promised": "^5.1.0",
    "mocha": "^2.3.4",
    "sinon": "^1.17.2",
    "standard": "^5.4.1"
  },
  "dependencies": {
    "101": "^1.2.0",
    "debug": "^2.2.0",
    "es6-error": "^2.0.2",
    "immutable": "^3.7.6",
    "knuth-shuffle": "^1.0.1"
  }
}
